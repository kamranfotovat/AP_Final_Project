@model GolestanProject.Models.User

<h2>Create New User</h2>

@using (Html.BeginForm())
{
    <div>
        <label for="first_name">First Name</label>
        <input type="text" id="first_name" name="first_name" value="@Model.first_name" required />
    </div>

    <div>
        <label for="last_name">Last Name</label>
        <input type="text" id="last_name" name="last_name" value="@Model.last_name" required />
    </div>

    <div>
        <label for="email">Email</label>
        <input type="email" id="email" name="email" value="@Model.email" required />
    </div>

    <div>
        <label for="hashed_password">Password</label>
        <input type="password" id="hashed_password" name="hashed_password" required />
    </div>

    <div>
        <label for="roleId">Role</label>
        <select id="roleId" name="roleId" required>
            <option value="">Select Role</option>
            @foreach (var role in ViewBag.Roles)
            {
                <option value="@role.id">@role.name</option>
            }
        </select>
    </div>

    <button type="submit">Create User</button>
}